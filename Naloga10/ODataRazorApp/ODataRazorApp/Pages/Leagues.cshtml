@page
@model LeaguesModel
@{
    ViewData["Title"] = "Leagues";
}

<h2>Leagues</h2>


<h3>Create New League</h3>
<form method="post" asp-page-handler="Create">
    <div class="form-group">
        <label asp-for="League.Name"></label>
        <input asp-for="League.Name" class="form-control" />
        <span asp-validation-for="League.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="League.Season"></label>
        <input asp-for="League.Season" class="form-control" />
        <span asp-validation-for="League.Season" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Create</button>
</form>


<h3 class="mt-5">List of Leagues</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Season</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var league in Model.Leagues)
        {
            <tr>
                <td>@league.Name</td>
                <td>@league.Season</td>
                <td>
                    <form method="post" asp-page-handler="Delete">
                        <input type="hidden" name="id" value="@league.LeagueId" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
