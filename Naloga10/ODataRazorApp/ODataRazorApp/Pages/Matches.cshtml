@page
@model MatchesModel
@{
    ViewData["Title"] = "Matches";
}

<h2>Matches</h2>


<h3>Create New Match</h3>
<form method="post" asp-page-handler="Create">
    <div class="form-group">
        <label asp-for="Match.Date"></label>
        <input asp-for="Match.Date" class="form-control" type="date" />
        <span asp-validation-for="Match.Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Match.HomeTeamId"></label>
        <input asp-for="Match.HomeTeamId" class="form-control" />
        <span asp-validation-for="Match.HomeTeamId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Match.AwayTeamId"></label>
        <input asp-for="Match.AwayTeamId" class="form-control" />
        <span asp-validation-for="Match.AwayTeamId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Match.Score"></label>
        <input asp-for="Match.Score" class="form-control" />
        <span asp-validation-for="Match.Score" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Create</button>
</form>


<h3 class="mt-5">List of Matches</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Home Team ID</th>
            <th>Away Team ID</th>
            <th>Score</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var match in Model.Matches)
        {
            <tr>
                <td>@match.Date.ToString("yyyy-MM-dd")</td>
                <td>@match.HomeTeamId</td>
                <td>@match.AwayTeamId</td>
                <td>@match.Score</td>
                <td>
                    <form method="post" asp-page-handler="Delete">
                        <input type="hidden" name="id" value="@match.MatchId" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
