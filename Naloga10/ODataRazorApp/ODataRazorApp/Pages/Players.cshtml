@page
@model PlayersModel
@{
    ViewData["Title"] = "Players";
}

<h2>Players</h2>


<h3>Create New Player</h3>
<form method="post" asp-page-handler="Create">
    <div class="form-group">
        <label asp-for="Player.Name"></label>
        <input asp-for="Player.Name" class="form-control" />
        <span asp-validation-for="Player.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Player.Position"></label>
        <input asp-for="Player.Position" class="form-control" />
        <span asp-validation-for="Player.Position" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Player.TeamId"></label>
        <input asp-for="Player.TeamId" class="form-control" />
        <span asp-validation-for="Player.TeamId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Create</button>
</form>


<h3 class="mt-5">List of Players</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Team ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model.Players)
        {
            <tr>
                <td>@player.Name</td>
                <td>@player.Position</td>
                <td>@player.TeamId</td>
                <td>
                    <form method="post" asp-page-handler="Delete">
                        <input type="hidden" name="id" value="@player.PlayerId" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
